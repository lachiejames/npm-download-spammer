{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "ES2020",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*.ts", "npm-downloads-increaser.config.js"],
    "exclude": ["src/**/*.spec.ts"]
}
